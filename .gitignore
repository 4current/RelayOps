*.db
*.sqlite
*.sqlite3

# -----------------------------
# Logs
# -----------------------------

*.log

# -----------------------------
# Environment files
# -----------------------------

.env
.env.local

# -----------------------------
# IDE / Editor
# -----------------------------

.vscode/
.idea/

*.swp
*.swo

# -----------------------------
# macOS
# -----------------------------

.DS_Store

# -----------------------------
# Temporary files
# -----------------------------

tmp/
*.tmp

